<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.ics.spendwise.ui.controller.DashboardController">
    <children>
        <VBox alignment="CENTER" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label styleClass="header-label" text="SpendWise Dashboard" />

                <Label style="-fx-font-size: 16px; -fx-text-fill: #aaaaaa;" text="Welcome back to your financial center" />

                <VBox alignment="CENTER" maxWidth="300.0" spacing="15.0">
                    <children>
                        <Button fx:id="accountsBtn" maxWidth="Infinity" mnemonicParsing="false" onAction="#showAccounts" prefHeight="50.0" text="My Accounts" />
                        <Button fx:id="categoriesBtn" maxWidth="Infinity" mnemonicParsing="false" onAction="#showCategories" prefHeight="50.0" text="Manage Categories" />
                        <Button fx:id="transactionsBtn" maxWidth="Infinity" mnemonicParsing="false" onAction="#showTransactions" prefHeight="60.0" styleClass="button-primary" text="Transactions" />
                    </children>
                </VBox>

                <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" styleClass="button-danger" text="Logout">
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>