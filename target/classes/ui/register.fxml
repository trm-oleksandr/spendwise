<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" alignment="CENTER" styleClass="root" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.upjs.ics.spendwise.ui.controller.RegisterController">

    <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0" />
    </padding>

    <children>
        <Label text="Create Account" styleClass="header-label" />

        <Label text="Join SpendWise today" style="-fx-text-fill: #aaaaaa;" />

        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <PasswordField fx:id="repeatPasswordField" promptText="Repeat password" />

        <HBox spacing="15.0" alignment="CENTER">
            <children>
                <Button text="Create" onAction="#onCreateAccount" defaultButton="true" styleClass="button-primary" prefWidth="100.0" />

                <Button text="Back" onAction="#onBackToLogin" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>