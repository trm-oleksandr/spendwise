<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.ics.spendwise.ui.controller.TransactionsController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label styleClass="header-label" text="%transactions.title" />
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-bar">
                    <children>
                        <ComboBox fx:id="accountFilter" prefWidth="150.0" promptText="%transactions.filter.account" />
                        <ComboBox fx:id="categoryFilter" prefWidth="150.0" promptText="%transactions.filter.category" />
                        <Button fx:id="resetBtn" text="%btn.reset" />
                        <HBox HBox.hgrow="ALWAYS" />
                        <Button fx:id="addBtn" styleClass="button-primary" text="%transactions.btn.add" />
                    </children>
                </HBox>

                <TableView fx:id="transactionsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateCol" prefWidth="120.0" text="%transactions.col.date" />
                        <TableColumn fx:id="categoryCol" prefWidth="150.0" text="%transactions.col.category" />
                        <TableColumn fx:id="typeCol" prefWidth="90.0" text="%transactions.col.type" />
                        <TableColumn fx:id="amountCol" prefWidth="100.0" text="%transactions.col.amount" />
                        <TableColumn fx:id="accountCol" prefWidth="150.0" text="%transactions.col.account" />
                        <TableColumn fx:id="noteCol" prefWidth="250.0" text="%transactions.col.note" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="deleteBtn" styleClass="button-danger" text="%btn.delete" />
                        <HBox HBox.hgrow="ALWAYS" />
                        <Button fx:id="backBtn" text="%btn.back" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>