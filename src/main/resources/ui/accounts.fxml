<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.ics.spendwise.ui.controller.AccountsController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="My Accounts">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="nameField" promptText="Account Name (e.g. Cash)" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="currencyField" prefWidth="100.0" promptText="Currency" text="EUR" />
                        <Button fx:id="addButton" text="Add Account" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </HBox>

                <TableView fx:id="accountsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="nameCol" prefWidth="250.0" text="Account Name" />
                        <TableColumn fx:id="currencyCol" prefWidth="100.0" text="Currency" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="deleteButton" text="Delete Selected" style="-fx-background-color: #ffcccc;" />
                        <Button fx:id="backButton" text="Back to Dashboard" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>