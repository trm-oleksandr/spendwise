<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.ics.spendwise.ui.controller.AccountsController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
            <children>
                <Label styleClass="header-label" text="%accounts.title" />

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="nameField" promptText="%accounts.placeholder.name" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="currencyField" prefWidth="100.0" promptText="%accounts.placeholder.currency" text="EUR" />
                        <Button fx:id="addButton" styleClass="button-primary" text="%btn.add" />
                    </children>
                </HBox>

                <TableView fx:id="accountsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="50.0" text="%accounts.col.id" />
                        <TableColumn fx:id="nameCol" prefWidth="250.0" text="%accounts.col.name" />
                        <TableColumn fx:id="currencyCol" prefWidth="100.0" text="%accounts.col.currency" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="deleteButton" styleClass="button-danger" text="%btn.delete" />
                        <Button fx:id="backButton" text="%btn.back" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>