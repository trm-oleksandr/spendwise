<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.TableColumn?>
        <?import javafx.scene.control.TableView?>
        <?import javafx.scene.layout.AnchorPane?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="My Accounts">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <TableView fx:id="accountsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="nameCol" prefWidth="200.0" text="Account Name" />
                        <TableColumn fx:id="currencyCol" prefWidth="100.0" text="Currency" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="addButton" text="Add Account" />
                        <Button fx:id="deleteButton" text="Delete Selected" />
                        <Button fx:id="backButton" text="Back to Dashboard" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>