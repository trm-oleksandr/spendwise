<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="960.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.ics.spendwise.ui.controller.BudgetsController">
    <children>
        <VBox spacing="16.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets left="32.0" right="32.0" top="32.0" bottom="32.0" />
            </padding>
            <children>
                <Label styleClass="header-label" text="%budgets.title" />

                <TableView fx:id="budgetsTable" prefHeight="360.0">
                    <columns>
                        <TableColumn fx:id="accountCol" prefWidth="160.0" text="%budgets.col.account" />
                        <TableColumn fx:id="periodCol" prefWidth="220.0" text="%budgets.col.period" />
                        <TableColumn fx:id="limitCol" prefWidth="140.0" text="%budgets.col.limit" />
                        <TableColumn fx:id="spentCol" prefWidth="140.0" text="%budgets.col.spent" />
                        <TableColumn fx:id="remainingCol" prefWidth="140.0" text="%budgets.col.remaining" />
                    </columns>
                </TableView>

                <VBox spacing="10.0">
                    <children>
                        <HBox spacing="10.0">
                            <ComboBox fx:id="accountCombo" promptText="%budgets.placeholder.account" prefWidth="200" />
                            <TextField fx:id="limitField" promptText="%budgets.placeholder.limit" />
                        </HBox>
                        <HBox spacing="10.0">
                            <DatePicker fx:id="startDatePicker" promptText="%budgets.placeholder.start" />
                            <DatePicker fx:id="endDatePicker" promptText="%budgets.placeholder.end" />
                        </HBox>
                    </children>
                </VBox>

                <HBox alignment="CENTER" spacing="12.0">
                    <Button fx:id="saveBtn" text="%btn.save" prefWidth="140.0" />
                    <Button fx:id="resetBtn" text="%btn.reset" prefWidth="140.0" />
                    <Button fx:id="deleteBtn" text="%btn.delete" prefWidth="160.0" />
                    <Button fx:id="backBtn" text="%btn.back" prefWidth="180.0" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
