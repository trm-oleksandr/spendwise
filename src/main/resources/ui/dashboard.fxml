<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.upjs.ics.spendwise.ui.controller.DashboardController">
    <children>

        <HBox alignment="TOP_RIGHT" spacing="5.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <Button onAction="#setLangEn" text="EN" style="-fx-font-size: 10px; -fx-padding: 3 8;" />
            <Button onAction="#setLangSk" text="SK" style="-fx-font-size: 10px; -fx-padding: 3 8;" />
        </HBox>

        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <children>
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label styleClass="header-label" text="%dashboard.title" />
                        <Label style="-fx-text-fill: #9ca3af; -fx-font-size: 14px;" text="%dashboard.subtitle" />
                    </children>
                </VBox>

                <HBox alignment="CENTER" spacing="10.0">
                    <Label style="-fx-text-fill: #9ca3af;" text="%dashboard.show_expenses" />
                    <ComboBox fx:id="accountSelector" prefWidth="200.0" promptText="%dashboard.all_accounts" />
                </HBox>

                <StackPane VBox.vgrow="ALWAYS">
                    <children>
                        <PieChart fx:id="expenseChart" legendSide="RIGHT" title="Expenses" visible="false" />

                        <VBox fx:id="emptyStateBox" alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 48px; -fx-text-fill: #374151;" text="ðŸ“Š" />
                                <Label fx:id="noDataLabel" style="-fx-font-size: 18px; -fx-text-fill: #9ca3af; -fx-font-weight: bold;" text="%dashboard.no_data_title" />
                                <Label fx:id="noDataDescLabel" style="-fx-text-fill: #6b7280;" text="%dashboard.no_data_desc" />
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </StackPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <Button fx:id="accountsBtn" mnemonicParsing="false" onAction="#showAccounts" prefHeight="50.0" prefWidth="160.0" text="%dashboard.btn.accounts" />
                    <Button fx:id="categoriesBtn" mnemonicParsing="false" onAction="#showCategories" prefHeight="50.0" prefWidth="160.0" text="%dashboard.btn.categories" />
                    <Button fx:id="transactionsBtn" mnemonicParsing="false" onAction="#showTransactions" prefHeight="50.0" prefWidth="160.0" styleClass="button-primary" text="%dashboard.btn.transactions" />
                </HBox>

                <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" styleClass="button-danger" text="%dashboard.btn.logout">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>